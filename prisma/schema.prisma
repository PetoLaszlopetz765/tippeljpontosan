datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  role     String  @default("USER")
  points   Int     @default(0)
  credits  Int     @default(0)
  bets     Bet[]
  chatMessages ChatMessage[]
}

model InviteCode {
  code String @id
  used Boolean @default(false)
}

model Event {
  id             Int    @id @default(autoincrement())
  homeTeam       String
  awayTeam       String
  kickoffTime    DateTime
  status         String @default("OPEN")
  finalHomeGoals Int?
  finalAwayGoals Int?
  creditCost     Int    @default(100)
  bets           Bet[]
  dailyPool      DailyPool?
}

model Bet {
  id                 Int    @id @default(autoincrement())
  user               User   @relation(fields: [userId], references: [id])
  userId             Int
  event              Event  @relation(fields: [eventId], references: [id])
  eventId            Int
  predictedHomeGoals Int
  predictedAwayGoals Int
  pointsAwarded      Int    @default(0)
  creditSpent        Int    @default(0)

  @@unique([userId, eventId])
}

model CreditPool {
  id         Int @id @default(autoincrement())
  totalDaily Int @default(0)
  totalChampionship Int @default(0)
}

model DailyPool {
  id                    Int      @id @default(autoincrement())
  eventId               Int      @unique
  event                 Event    @relation(fields: [eventId], references: [id])
  date                  DateTime @db.Date
  totalDaily            Int      @default(0)
  carriedFromPrevious   Int      @default(0)
  totalDistributed      Int      @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  text      String
  createdAt DateTime @default(now())
  deleted   Boolean  @default(false)
}